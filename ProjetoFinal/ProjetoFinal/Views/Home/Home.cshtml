@model IEnumerable<Publication>
    @{
    ViewData["Title"] = "Fish";
    }

    @*Home page that has all the gluglus posted in Fish*@

    <div class="text-center">
        <tbody>
            @foreach (var item in Model)
            {
            <div class="card">
                <div class="containt">
                    <div class="top-bar">
                        <span>
                            <h3 class="username-post">@item.Username</h3>
                        </span>
                    </div>
                    <div class="post">
                        <h3>@item.Text</h3>
                        <span>@item.Time</span>
                        <hr />
                        <div class="stat">
                            <span><a asp-action="Likes" asp-route-id="@item.IdPub" style="width:30px"><img
                                        src="/background-images/heart-icon.png"></a><b>@item.Likes</b></span>
                        </div>
                        <hr />
                    </div>
                </div>
            </div>
            <br />
            }
        </tbody>
    </div>


    <style>
        body {
            background: url(/background-images/mainbackground.jpg) no-repeat center center fixed;
            background-size: cover;
        }

        .card {
            height: 250px;
            width: 750px;
            background-color: white;
            border-radius: 15px;
            margin-left: 22%;
        }

        .containt {

            height: 97%;
            width: 98%;
            margin-top: 1%;
            margin-left: 1%;
            margin-right: 1%;
            margin-bottom: 1%;
            border-radius: 10px;
        }

        .top-bar {
            display: flex;
            height: 70px;
            margin-left: 10px;
        }

        .post {
            margin-left: 15px;
            margin-right: 15px;

        }

        .post img {
            width: 100%;
            border-radius: 15px;
        }

        .post span {
            position: grid;
            margin: auto;
            margin-bottom: 10px;
            margin-left: 10px;
            font-weight: soft;
            color: gray;

        }

        .stat {

            height: 20px;
        }

        .stat img {
            height: 20px;
            width: 20px;
            margin-left: 10px;
        }

        .username-post {
            font-size: 18pt;
            font-weight: bold;
        }
    </style>