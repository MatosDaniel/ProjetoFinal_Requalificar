@{
    ViewData["Title"] = "Logout";
}

@*Page for the user to confirm if the user wants to logout*@

<div class="card-confirm">
<form asp-action="LogoutUser">
        <p>Do you really want to leave your shoal of Fish behind?</p>
        <button class="btn btn-danger" type="submit">Yes :(</button>
        <a class="btn btn-dark" asp-area="" asp-controller="Home" asp-action="Home">No :)</a>
</form>
</div>

<style>
    body{
        background-image: url("/background-images/mainbackground.jpg");
		background-size: cover;
		background-repeat: no-repeat;
    }

    .card-confirm{
        background-color: white;
        margin-left: 20%;
        margin-right: 20%;
        margin-top: 16%;
        padding: 30px;
        font-size: 15pt;
        border: 1px;
        border-radius: 50px;
    }
</style>