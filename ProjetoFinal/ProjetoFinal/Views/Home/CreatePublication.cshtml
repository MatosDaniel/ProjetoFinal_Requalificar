@model ProjetoFinal.Models.PostViewModel
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="contentContainer">

                <div class="twitter boxContainer">
                <label class="twitter tweetHeader">Compose new Tweet</label>
                <span class="close"></span>
                <div class="lineSplit"></div>
                <textarea class="messageBox" id="postMessage" asp-for="Text" placeholder="What's happening?"></textarea>
                <label class="wordCounter" id="wordCounter">140</label>
                <input type="submit" class="postButton" id="submitPost" value="Tweet"/>
                </div>
  
            </div>
             <input hidden asp-for=UserId value="@ViewData["UserId"]"/>
        </form>
    </div>
</div>

<style>
    .contentContainer {
	 left: 0;
	 position: absolute;
	 width: 100%;
	 height: 100%;
	 padding-top: 10%;
	 font-family: 'Roboto', sans-serif;
}
 .twitter.boxContainer {
	 width: 410px;
	 height: 180px;
	 margin: 0 auto;
	 text-align: center;
	 border-radius: 5px;
	 background-color: #FFFFFF;
}
 .twitter.boxContainer div.lineSplit {
	 width: 100%;
	 height: 1px;
	 background: #dcdee3;
}
 .twitter.boxContainer .tweetHeader {
	 color: #8899a6;
	 font-size: 15px;
	 font-weight: 500;
	 overflow: hidden;
	 line-height: 35px;
	 margin-left: 30px;
}
 .twitter.boxContainer .messageBox {
	 width: 93%;
	 padding: 5px;
	 resize: none;
	 height: 60px;
	 color: #292F33;
	 display: block;
	 font-size: 13px;
	 font-weight: 200;
	 margin: 10px auto;
	 border-radius: 3px;
	 border: 1px solid #a3d4f2;
}
 .twitter.boxContainer .messageBox:focus {
	 outline: none;
}
 .twitter.boxContainer .wordCounter {
	 background-color: transparent;
	 color: #8899a6;
	 display: inline-block;
	 width: 70%;
	 border: 0;
	 padding: 0 15px;
	 position: relative;
	 vertical-align: top;
	 top: 10px;
	 text-align: right;
	 font-size: 14px;
	 text-shadow: 0 1px 1px rgba(255,255,255,0.75);
}
 .twitter.boxContainer .postButton {
	 width: 80px;
	 height: 35px;
	 border: none;
	 float: right;
	 color: #FFFFFF;
	 display: block;
	 cursor: pointer;
	 font-size: 12px;
	 font-weight: 500;
	 border-radius: 3px;
	 margin: 0 10px 0 0;
	 background-color: #1b95e0;
	 box-shadow: 0 1px 1px rgba(0,0,0,0.05);
	 padding-left: 20px;
	 background-image: url(data:image/png;
	base64,);
	 background-size: 22px;
	 background-repeat: no-repeat;
	 background-position: 5px 6px;
	 border: 1px solid transparent;
}
 .twitter.boxContainer .postButton:hover, .twitter.boxContainer .postButton:visited {
	 outline: none;
}
 .twitter.boxContainer .postButton:visited {
	 outline: none;
	 box-shadow: 0 0 1px 2px rgba(88,144,255,0.75), 0 1px 1px rgba(0,0,0,0.15);
}
 .twitter.boxContainer .postButton:active {
	 background-color: #3B5998;
	 border-color: #2f477a #314a7f #334c83;
	 box-shadow: 0 0 1px 2px rgba(88,144,255,0.75), 0 1px 1px rgba(0,0,0,0.15);
}
 .twitter.boxContainer .close {
	 cursor: pointer;
	 float: right;
	 margin: 12px;
	 width: 10px;
	 height: 10px;
	 opacity: 0.6;
}
 .twitter.boxContainer .close:hover {
	 opacity: 1;
}
 .twitter.boxContainer .close:before, .twitter.boxContainer .close:after {
	 position: absolute;
	 content: ' ';
	 height: 13px;
	 width: 2px;
	 background-color: #333;
}
 .twitter.boxContainer .close:before {
	 transform: rotate(45deg);
}
 .twitter.boxContainer .close:after {
	 transform: rotate(-45deg);
}
 
</style>
