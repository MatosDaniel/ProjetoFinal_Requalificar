@model ProjetoFinal.Models.UserViewModel

<div class="card-confirm">
    <form asp-action="Delete" asp-route-id="@Model.UserId">
        <p>You are about to delete your account. Are you really sure?</p>
        <button class="btn btn-danger" type="submit">Confirm</button>
        <a class="btn btn-dark" asp-area="" asp-controller="Home" asp-action="Profile"
            asp-route-id="@Model.UserId">Cancel</a>
    </form>
</div>

<style>
    body {
        background-image: url("/background-images/mainbackground.jpg");
        background-size: cover;
        background-repeat: no-repeat;
    }

    .card-confirm {
        background-color: white;
        margin-left: 20%;
        margin-right: 20%;
        margin-top: 16%;
        padding: 30px;
        font-size: 15pt;
        border: 1px;
        border-radius: 50px;
    }
</style>